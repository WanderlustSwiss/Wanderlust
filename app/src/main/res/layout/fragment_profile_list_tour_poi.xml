<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@color/background_main"
    android:padding="8dp">

    <ImageView
        android:id="@+id/ListTourImageView"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_centerVertical="true"
        android:src="@color/heading_icon_unselected" />

    <LinearLayout
        android:id="@+id/ListTourInfo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:layout_toLeftOf="@id/controls_container"
        android:layout_toRightOf="@id/ListTourImageView"
        android:orientation="vertical">

        <TextView
            android:id="@+id/ListTourTitle"
            style="@style/h2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1" />

        <TextView
            android:id="@+id/ListTourDescription"
            style="@style/p.Grey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/controls_container"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="16dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ListTourEdit"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:padding="16dp"
            android:paddingBottom="12dp"
            android:src="@drawable/ic_edit_black_24dp" />

        <ImageView
            android:id="@+id/ListTourDelete"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:padding="16dp"
            android:src="@drawable/ic_delete_black_24dp" />
    </RelativeLayout>

</RelativeLayout>
