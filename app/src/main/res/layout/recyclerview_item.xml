<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="400dp"
    android:elevation="5dp"
    android:orientation="vertical"
    android:padding="10dp">

    <!--<View
        android:id="@+id/colorView"
        android:layout_width="100dp"
        android:layout_height="100dp"/>-->

    <TextView
        android:id="@+id/tvImage"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tourMainTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tourTitle"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="130dp"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tourDistance"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/imageDistance"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:paddingRight="10dp"
                    android:src="@drawable/ic_directions_walk_black_24dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="130dp"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tourTime"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/imageTime"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:paddingRight="10dp"
                    android:src="@drawable/ic_timer_black_24dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="130dp"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tourDifficulty"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/imageDifficulty"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:paddingRight="10dp"
                    android:src="@drawable/ic_fiber_manual_record_black_24dp" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:padding="5dp">

            <ImageButton
                android:id="@+id/favoriteButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_favorite_black_24dp" />

            <ImageButton
                android:id="@+id/saveButton"
                android:tint="@color/common_google_signin_btn_text_dark"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_turned_in_black_24dp" />

            <ImageButton
                android:id="@+id/shareButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_share_black_24dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>