<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <EditText
        android:id="@+id/titel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="Titel"
        android:maxLength="120" />

    <EditText
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="@string/dialog_feedback_description_edit_hint"
        android:maxLength="200" />

    <Spinner
        android:id="@+id/typeSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:entries="@array/dialog_feedback_spinner_mode" />

    <Spinner
        android:id="@+id/modeSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:entries="@array/dialog_feedback_spinner_mode" />

    <RadioGroup
        android:id="@+id/feedback_type_radio_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radio_button_positive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/black"
            android:checked="true" />

        <RadioButton
            android:id="@+id/radio_button_negative"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/highlightRed"
            android:checked="false" />

        <RadioButton
            android:id="@+id/radio_button_alert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/structureYellow"
            android:checked="false" />
    </RadioGroup>


    <RelativeLayout
        android:id="@+id/action_control_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/description"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/dialog_post_feedback_button_cancel"
            style="@style/my_click_button"
            android:layout_alignParentLeft="true"
            android:text="@string/action_dismiss" />

        <Button
            android:id="@+id/dialog_post_feedback_button_save"
            style="@style/my_click_button"
            android:layout_alignParentRight="true"
            android:text="@string/action_confirm" />
    </RelativeLayout>


</LinearLayout>