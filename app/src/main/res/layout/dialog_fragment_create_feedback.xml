<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"

    android:padding="10dp">

    <TextView
        android:id="@+id/dialog_post_feedback_title"
        style="@style/h2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/dialog_feedback_title" />

    <TextView
        android:id="@+id/dialog_post_feedback_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialog_post_feedback_title"
        android:text="@string/dialog_feedback_description" />

    <RelativeLayout
        android:id="@+id/dialog_post_feedback_line1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_post_feedback_description">

    </RelativeLayout>

    <!-- PUBLICATION MODE -->
    <RelativeLayout
        android:id="@+id/dialog_post_feedback_line2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_post_feedback_line1"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/publicationModeTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/publication_mode_spinner"
            android:text="@string/dialog_feedback_publication_mode"
            tools:ignore="RtlHardcoded" />

        <Spinner
            android:id="@+id/publication_mode_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:entries="@array/dialog_feedback_spinner_mode"
            tools:ignore="RtlHardcoded" />
    </RelativeLayout>

    <!-- FEEDBACK TYPE -->
    <RelativeLayout
        android:id="@+id/dialog_post_feedback_line3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_post_feedback_line2"
        android:layout_marginTop="5dp">

        <TextView
            android:id="@+id/feedbackTypeTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/feedback_type_radio_group"
            android:text="@string/dialog_feedback_feedback_type"/>

        <RadioGroup
            android:id="@+id/feedback_type_radio_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radio_button_positive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/black"
                android:checked="true" />

            <RadioButton
                android:id="@+id/radio_button_negative"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/highlightRed"
                android:checked="false" />

            <RadioButton
                android:id="@+id/radio_button_alert"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/structureYellow"
                android:checked="false" />
        </RadioGroup>
    </RelativeLayout>

    <!-- attention: max length must be confirm to settings in db -->
    <EditText
        android:id="@+id/dialog_post_feedback_description_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_post_feedback_line3"
        android:layout_marginTop="10dp"
        android:hint="@string/dialog_feedback_description_edit_hint"
        android:maxLength="200" />

    <RelativeLayout
        android:id="@+id/action_control_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_post_feedback_description_edit_text"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/dialog_post_feedback_button_cancel"
            style="@style/my_click_button"
            android:layout_alignParentLeft="true"
            android:text="@string/action_dismiss" />

        <Button
            android:id="@+id/dialog_post_feedback_button_save"
            style="@style/my_click_button"
            android:layout_alignParentRight="true"
            android:text="@string/action_confirm"/>
    </RelativeLayout>


</RelativeLayout>