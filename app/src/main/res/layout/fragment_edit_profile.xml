<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/editProfile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_main"
    tools:context="eu.wise_iot.wanderlust.views.EditProfileFragment">

    <include
        layout="@layout/app_bar_edit_profile"
        />

    <ImageView
        android:id="@+id/currentImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:src="@drawable/images"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="15dp"/>

    <TextView
        android:id="@+id/changeImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:text="@string/changeProfilePicture"
        android:textColor="@color/primary_main"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginBottom="30dp"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/editEmailLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="30dp">

        <EditText
            android:id="@+id/editEmailField"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/email_hint"/>

    </android.support.design.widget.TextInputLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hikingpreference"
        android:textStyle="bold"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="111dp">


        <CheckBox
            android:id="@+id/checkboxT1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="T1"
            android:layout_below="@+id/checkboxT1"
            android:layout_alignLeft="@+id/checkboxT1"/>

        <CheckBox
            android:id="@+id/checkboxT2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/checkboxT1"
            android:layout_alignBottom="@+id/checkboxT1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="T2"
            android:layout_below="@id/checkboxT2"
            android:layout_alignLeft="@+id/checkboxT2"/>


        <CheckBox
            android:id="@+id/checkboxT3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/checkboxT2"
            android:layout_alignBottom="@+id/checkboxT2"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="T3"
            android:layout_below="@+id/checkboxT3"
            android:layout_alignLeft="@+id/checkboxT3"/>


        <CheckBox
            android:id="@+id/checkboxT4"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/checkboxT3"
            android:layout_alignBottom="@+id/checkboxT3"/>

        <TextView
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="T4"
            android:layout_below="@+id/checkboxT4"
            android:layout_alignLeft="@+id/checkboxT4"/>

        <CheckBox
            android:id="@+id/checkboxT5"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/checkboxT4"
            android:layout_alignBottom="@id/checkboxT4"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="T5"
            android:layout_below="@id/checkboxT5"
            android:layout_alignLeft="@id/checkboxT5"/>

        <CheckBox
            android:id="@+id/checkboxT6"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/checkboxT5"
            android:layout_alignBottom="@id/checkboxT5"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="T6"
            android:layout_below="@id/checkboxT6"
            android:layout_alignLeft="@id/checkboxT6"/>

    </RelativeLayout>

</LinearLayout>
