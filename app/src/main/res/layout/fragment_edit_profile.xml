<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/editProfile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="eu.wise_iot.wanderlust.views.EditProfileFragment">

    <include
        layout="@layout/app_bar_edit_profile"
        />

    <ImageView
        android:id="@+id/currentImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:src="@drawable/images"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="15dp"/>

    <TextView
        android:id="@+id/changeImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:text="@string/changeProfilePicture"
        android:textColor="@color/primary_main"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginBottom="30dp"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/editNicknameLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:contentDescription="@string/nickname"
        android:layout_marginBottom="30dp">

        <EditText
            android:id="@+id/editNicknameField"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/nickname_hint"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/editEmailLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="30dp">

        <EditText
            android:id="@+id/editEmailField"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/email_hint"/>

    </android.support.design.widget.TextInputLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hikingpreference"
        android:textStyle="bold"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="111dp">

        <TextView
            android:id="@+id/checkboxEasyTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/checkboxTitleEasy"
            android:layout_above="@+id/checkboxEasy"
            android:layout_alignLeft="@+id/checkboxEasy"/>

        <CheckBox
            android:id="@+id/checkboxEasy"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_toLeftOf="@id/checkboxMedium"
            android:layout_alignBottom="@id/checkboxMedium"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="T1-T2"
            android:layout_below="@+id/checkboxEasy"
            android:layout_alignLeft="@+id/checkboxEasy"/>

        <TextView
            android:id="@+id/checkboxMediumTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/checkboxTitleMedium"
            android:layout_above="@+id/checkboxMedium"
            android:layout_alignLeft="@+id/checkboxMedium"/>

        <CheckBox
            android:id="@+id/checkboxMedium"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="T3-T4"
            android:layout_below="@+id/checkboxMedium"
            android:layout_alignLeft="@+id/checkboxMedium"/>

        <TextView
            android:id="@+id/checkboxHardTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/checkboxTitleHard"
            android:layout_above="@+id/checkboxHard"
            android:layout_alignLeft="@+id/checkboxHard"
            />

        <CheckBox
            android:id="@+id/checkboxHard"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_toRightOf="@+id/checkboxMedium"
            android:layout_alignBottom="@+id/checkboxMedium"/>

        <TextView
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="T5-T6"
            android:layout_below="@+id/checkboxHard"
            android:layout_alignLeft="@+id/checkboxHard"/>

    </RelativeLayout>

</LinearLayout>
