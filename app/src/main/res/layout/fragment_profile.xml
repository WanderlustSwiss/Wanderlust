<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/profileLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="eu.wise_iot.wanderlust.views.ProfileFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="225dp"
        android:background="@color/primary_main"
        android:paddingLeft="20dp"
        android:paddingTop="50dp">

        <ImageView
            android:id="@+id/profilePicture"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerVertical="true"
            android:paddingTop="20dp"
            android:src="@drawable/images" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/profilePicture"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:paddingTop="50dp">

            <TextView
                android:id="@+id/profileAmountPOI"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/profilePOItitle"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/profileAmountPOI"
                android:layout_below="@+id/profileAmountPOI"
                android:text="@string/title_poi"
                android:textAlignment="center"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/profileAmountTours"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_toEndOf="@id/profileAmountPOI"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/profileTourTitle"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/profileAmountTours"
                android:layout_below="@+id/profileAmountTours"
                android:text="@string/title_tours"
                android:textAlignment="center"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/profileAmountScore"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_toEndOf="@+id/profileAmountTours"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/profileScoreTitle"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/profileAmountScore"
                android:layout_below="@+id/profileAmountScore"
                android:text="@string/title_score"
                android:textAlignment="center"
                android:textSize="10dp" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/editProfileButton"
                style="@style/ButtonBorder.Accent"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_below="@+id/profilePOItitle"
                android:layout_marginTop="10dp"
                android:text="@string/profile_edit" />
        </RelativeLayout>
    </RelativeLayout>

    <android.support.design.widget.TabLayout
        android:id="@+id/profileTabs"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/primary_main"
        android:clickable="false"
        android:focusable="true"
        android:splitMotionEvents="false"
        app:tabIndicatorColor="@color/highlight_main"
        app:tabTextAppearance="@style/TextAppearance.AppCompat">

        <android.support.design.widget.TabItem
            android:id="@+id/tab_favorites"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="fill"
            android:text="@string/favourites"
            android:visibility="visible" />

        <android.support.design.widget.TabItem
            android:id="@+id/tab_mytours"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="fill"
            android:text="@string/tours"
            android:visibility="visible" />

        <android.support.design.widget.TabItem
            android:id="@+id/tab_poi"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="fill"
            android:text="@string/pois"
            android:visibility="visible" />

        <android.support.design.widget.TabItem
            android:id="@+id/tab_saved"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="fill"
            android:text="@string/saved"
            android:visibility="visible" />
    </android.support.design.widget.TabLayout>

    <FrameLayout
        android:id="@+id/profileTabContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/primary_second">

        <ListView
            android:id="@+id/listContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.75"
            android:clickable="false">

        </ListView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="16dp"
            android:drawableLeft="@drawable/ic_announcement_black_24dp"
            android:gravity="center"
            android:padding="8dp"
            android:text="@string/msg_available_in_next_feature"
            android:textColor="@color/white"
            android:textStyle="italic" />

    </FrameLayout>

</LinearLayout>
