<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:divider="@drawable/empty_divider"
            android:orientation="vertical"
            android:showDividers="middle">

            <TextView
                android:id="@+id/tour_title"
                style="@style/h2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <ImageView
                android:contentDescription="@null"
                android:id="@+id/teaser_image"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop" />

            <GridLayout
                android:layout_width="332dp"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:orientation="horizontal"
                android:rowCount="5">

                <TextView
                    android:contentDescription="@null"
                    android:minWidth="100dp"
                    android:text="@string/tour_difficulty_label" />

                <TextView android:id="@+id/difficulty_view" />

                <TextView android:text="@string/tour_duration_label" />

                <TextView android:id="@+id/duration_view" />

                <TextView android:text="@string/tour_distance_up_label" />

                <TextView android:id="@+id/distanzeUp_view" />

                <TextView android:text="@string/tour_distance_down_label" />

                <TextView android:id="@+id/distanzeDown_view" />

                <TextView android:text="@string/tour_waypoints_label" />

                <TextView android:id="@+id/track_segment_view" />

                <TextView android:text="@string/tour_link_label" />

                <TextView
                    android:id="@+id/link_source_view"
                    android:textColor="@color/myRed" />
            </GridLayout>

            <TextView
                android:id="@+id/description_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <!--<ImageView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:src="@drawable/map_101"-->
            <!--android:adjustViewBounds="true" />-->

            <Button
                android:id="@+id/go_to_start_location_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tour_button_show_map" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>