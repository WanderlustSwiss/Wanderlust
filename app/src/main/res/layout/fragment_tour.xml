<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_main"
    android:orientation="vertical"
    android:layout_marginTop="52dp"
    >

    <TextView
        android:id="@+id/description_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@drawable/empty_divider"
            android:orientation="vertical"
            android:showDividers="middle">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/tourImage"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:adjustViewBounds="true"
                android:contentDescription="@null"
                android:scaleType="centerCrop" />

            <ImageButton
                android:id="@+id/favButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="17dp"
                android:layout_marginTop="12dp"
                android:background="@null"
                android:src="@drawable/ic_favorite_white_24dp"
                />

        </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/primary_main">

                <TextView
                    android:id="@+id/tourRegion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Region"
                    android:textSize="20sp"
                    android:textColor="@color/background_main"
                    android:paddingTop="12dp"/>

                <TextView
                    android:id="@+id/tourTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Title"
                    android:textSize="24sp"
                    android:textColor="@color/background_main"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="12dp">

                    <!--
                    <RatingBar
                        android:id="@+id/tourRating"
                        style="?android:attr/ratingBarStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="13dp"
                        android:backgroundTint="@color/background_main"/>

                    <TextView
                        android:id="@+id/tourDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="53dp"
                        android:layout_toEndOf="@+id/tourRating"
                        android:text="dd.MM.yyyy"
                        android:textColor="@color/background_main"/>
                    -->

                    <ImageButton
                        android:id="@+id/tourSaved"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginEnd="19dp"
                        android:layout_toStartOf="@+id/tourShared"
                        android:background="@null"
                        android:foregroundGravity="right"
                        android:src="@drawable/ic_turned_in_not_black_24dp"
                        />

                    <ImageButton
                        android:id="@+id/tourShared"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginEnd="17dp"
                        android:background="@null"
                        android:src="@drawable/ic_reply_black_24dp"
                        android:scaleX="-1"
                        />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tourDistance"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:drawableLeft="@drawable/ic_directions_walk_black_24dp"
                                android:drawablePadding="5dp"
                                android:drawableTint="@color/black"
                                android:singleLine="true"/>

                            <TextView
                                android:id="@+id/tourAscend"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:drawableLeft="@drawable/ic_arrow_upward_black_24dp"
                                android:drawablePadding="5dp"
                                android:drawableTint="@color/black"
                                android:singleLine="true"/>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_marginTop="7dp">

                        <TextView
                            android:id="@+id/tourDuration"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawableLeft="@drawable/ic_duration_black"
                            android:drawablePadding="5dp"
                            android:drawableTint="@color/black"
                            android:singleLine="true" />

                        <TextView
                            android:id="@+id/tourDescend"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawableLeft="@drawable/ic_arrow_downward_black_24dp"
                            android:drawablePadding="5dp"
                            android:drawableTint="@color/black"
                            android:singleLine="true"/>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tourDifficulty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_brightness_1_black_24dp"
                        android:drawablePadding="5dp"
                        android:drawableTint="@color/structure_main"
                        android:singleLine="true"
                        android:layout_marginTop="7dp"
                        />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/tourDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description" />

            <Button
                android:id="@+id/jumpToStartLocationButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tour_button_show_map" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>