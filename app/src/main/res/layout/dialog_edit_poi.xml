<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <EditText
        android:id="@+id/poi_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="Titel"
        android:maxLength="120" />

    <EditText
        android:id="@+id/poi_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="@string/dialog_feedback_description_edit_hint"
        android:maxLength="200" />

    <Spinner
        android:id="@+id/poi_typeSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:entries="@array/dialog_feedback_spinner_type" />

    <Spinner
        android:id="@+id/poi_modeSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:entries="@array/dialog_feedback_spinner_mode" />

    <RelativeLayout
        android:id="@+id/poi_action_control_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/poi_description"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/dialog_edit_poi_cancel_button"
            style="@style/my_click_button"
            android:layout_alignParentLeft="true"
            android:text="@string/action_dismiss" />

        <Button
            android:id="@+id/dialog_edit_poi_save_button"
            style="@style/my_click_button"
            android:layout_alignParentRight="true"
            android:text="@string/action_confirm" />
    </RelativeLayout>


</LinearLayout>