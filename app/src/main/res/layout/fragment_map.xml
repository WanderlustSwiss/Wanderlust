<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/myPrimaryBackground"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/myPrimaryDark"
        tools:context="eu.wise_iot.wanderlust.MapFragment">

        <org.osmdroid.views.MapView
            android:id="@+id/mapView"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:apiKey="b52e68138121400c953136847e9a48cf" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|right"
            android:orientation="vertical">
            <SearchView android:layout_width="382dp"
                        android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|right">

                <Button
                    android:id="@+id/layerButton"
                    style="@style/my_round_button_default"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/button_layers" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:orientation="vertical">

            <!--<Button-->
            <!--android:id="@+id/centerMapOnPOIButton"-->
            <!--style="@style/my_round_button"-->
            <!--android:background="@drawable/button_center_map_on_poi" />-->

            <android.support.design.widget.CheckableImageButton
                android:id="@+id/locationButton"
                style="@style/my_round_button"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:background="@drawable/button_location_find"
                android:textOff=""
                android:textOn=""/>

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/takePictureButton"
                android:layout_height="56dp"
                android:layout_width="56dp"
                android:layout_gravity="center_horizontal|center"
                android:src = "@drawable/ic_layers_black_18dp"/>

        </LinearLayout>
    </FrameLayout>
</LinearLayout>
