<resources>

    <!-- THEME FOR APPLICATION -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary_main</item>
        <item name="colorPrimaryDark">@color/heading_icon_unselected</item>
        <item name="colorAccent">@color/primary_main</item>
    </style>

    <!-- TEXT STYLES: HEADER -->

    <style name="h1">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="h1.Light">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="h1.Grey">
        <item name="android:textColor">@color/heading_icon_unselected</item>
    </style>

    <style name="h2">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="h2.Light">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="h2.Grey">
        <item name="android:textColor">@color/heading_icon_unselected</item>
    </style>


    <!-- TEXT STYLES: PARAGRAPH -->

    <style name="p">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="p.Light" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="p.Grey">
        <item name="android:textColor">@color/heading_icon_unselected</item>
    </style>

    <style name="p.Small">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="p.Small.Light">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="p.Small.Grey">
        <item name="android:textColor">@color/heading_icon_unselected</item>
    </style>


    <!-- BUTTONS -->

    <style name="FloatingActionButton" parent="Widget.Design.FloatingActionButton">
        <!-- properties -->
        <item name="android:elevation">5dp</item>
        <item name="backgroundTint">@color/primary_main</item>
        <item name="android:layout_width">56dp</item>
        <item name="android:layout_height">56dp</item>
        <!-- gbutton_whitetton space for the shadow -->
        <item name="android:layout_margin">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="FloatingActionButton.Light">
        <item name="backgroundTint">@color/background_pale</item>
    </style>

    <style name="FloatingActionButton.Mini">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
    </style>

    <style name="FloatingActionButton.Mini.Light">
        <item name="backgroundTint">@color/background_pale</item>
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
    </style>

    <style name="PoiButton" parent="Widget.Design.FloatingActionButton">
        <item name="android:elevation">0dp</item>
        <item name="backgroundTint">@color/primary_main</item>
        <item name="android:layout_width">56dp</item>
        <item name="android:layout_height">56dp</item>
    </style>

    <style name="sac_occupation_table">
        <item name="android:textColor">#FFF</item>
        <item name="android:background">#F00</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name=" android:gravity">center</item>
        <item name="android:padding">4dp</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="standard_button">
        <item name="backgroundTint">@color/primary_main</item>
        <item name="android:textColor">@color/background_main</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="ButtonBorder.Accent" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/outline_button_light</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="my_click_button">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
    </style>


    <!-- TRANSPARENT CONTAINER -->
    <style name="transparent_container">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:paddingTop">25dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:paddingBottom">25dp</item>
        <item name="android:paddingLeft">15dp</item>
        <!-- todo: maybe make background transparent? -->
        <item name="android:background">@color/background_two_and_inactive</item>

        <item name="android:divider">@drawable/divider_vertical</item>
        <item name="android:showDividers">middle</item>
    </style>

    <!-- DIALOG -->
    <style name="my_no_border_dialog_theme" parent="@android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- Full screen dialog -->
    <style name="FullScreenDialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsFloating">false</item>
    </style>


    <!-- Input Fields -->

    <style name="TextInputLayout" parent="Widget.Design.TextInputLayout">
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:inputType">text</item>
        <item name="android:theme">@style/TextLabel</item>
        <item name="errorTextAppearance">@style/default_input_error</item>
    </style>

    <style name="TextInputLayout.Light" parent="Widget.Design.TextInputLayout">
        <item name="android:theme">@style/TextLabel.White</item>
    </style>


    <style name="default_input_error" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/highlight_main</item>
    </style>

    <style name="TextLabel" parent="TextAppearance.AppCompat">
        <item name="android:textSize">18sp</item>
        <item name="android:textColorHint">@color/heading_icon_unselected</item>
        <item name="colorControlNormal">@color/heading_icon_unselected</item>
        <item name="android:textColorHighlight">@color/highlight_main</item>
        <item name="android:textColorLink">@color/highlight_main</item>
    </style>

    <style name="TextLabel.White">
        <item name="android:textColorHint">@color/background_main</item>
        <item name="colorControlNormal">@color/background_main</item>
    </style>

    <!-- Spinner -->
    <style name="default_spinner" parent="@android:style/Widget.Holo.Light.Spinner">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <!-- Plot -->
    <style name="Plot" parent="APDefacto.Light">
        <item name="graphMarginRight">0dp</item>

        <item name="lineLabelInsetLeft">21dp</item>
        <item name="lineLabelRotationBottom">-45</item>
        <item name="lineLabelTextSizeBottom">12sp</item>
        <item name="lineLabelTextSizeLeft">12sp</item>
        <item name="lineLabels">left|bottom</item>

        <item name="android:background">@android:color/transparent</item>
        <item name="backgroundColor">@android:color/transparent</item>
        <item name="graphBackgroundColor">@android:color/transparent</item>
        <item name="gridBackgroundColor">@android:color/transparent</item>
        <item name="domainLineColor">@android:color/transparent</item>
        <item name="rangeLineColor">@color/heading_icon</item>
        <item name="lineLabelTextColorTop">@color/black</item>
        <item name="lineLabelTextColorBottom">@color/heading_icon_unselected</item>
        <item name="lineLabelTextColorLeft">@color/heading_icon_unselected</item>
        <item name="lineLabelTextColorRight">@color/black</item>
        <item name="domainOriginLineColor">@color/black</item>
        <item name="rangeOriginLineColor">@color/black</item>
        <item name="titleTextColor">@color/black</item>
        <item name="domainTitleTextColor">@color/black</item>
        <item name="rangeTitleTextColor">@color/black</item>
        <item name="legendTextColor">@color/black</item>
    </style>
</resources>
