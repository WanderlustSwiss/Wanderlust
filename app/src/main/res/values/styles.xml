<resources>

    <!-- THEME FOR APPLICATION -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary_main</item>
        <item name="colorPrimaryDark">@color/heading_icon_unselected</item>
        <item name="colorAccent">@color/primary_main</item>
    </style>


    <!-- TEXT STYLES -->

    <style name="h1_white">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="h2">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="h3">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">3dp</item>
    </style>

    <style name="p_white">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="p_black">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>


    <!-- BUTTONS -->
    <style name="floatingactionbutton_normal" parent="Widget.Design.FloatingActionButton">
        <!-- properties -->
        <item name="android:elevation">5dp</item>
        <item name="backgroundTint">@color/primary_main</item>
        <item name="android:layout_width">56dp</item>
        <item name="android:layout_height">56dp</item>
        <!-- gbutton_whitetton space for the shadow -->
        <item name="android:layout_margin">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="floatingactionbutton_normal_light" parent="Widget.Design.FloatingActionButton">
        <!-- properties -->
        <item name="android:elevation">5dp</item>
        <item name="backgroundTint">@color/background_two_and_inactive</item>
        <item name="android:layout_width">56dp</item>
        <item name="android:layout_height">56dp</item>
        <!-- gbutton_whitetton space for the shadow -->
        <item name="android:layout_margin">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="standard_button">
        <item name="backgroundTint">@color/primary_main</item>
        <item name="android:textColor">@color/background_main</item>
        <item name="android:layout_height">60dp</item>
    </style>


    <style name="floatingactionbutton_mini" parent="Widget.Design.FloatingActionButton">
        <!-- properties (material standard) -->
        <item name="android:elevation">5dp</item>
        <item name="backgroundTint">@color/primary_main</item>
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <!-- gbutton_whitetton space for the shadow -->
        <item name="android:layout_margin">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="floatingactionbutton_mini_light" parent="Widget.Design.FloatingActionButton">
        <!-- properties (material standard) -->
        <item name="android:elevation">5dp</item>
        <item name="backgroundTint">@color/background_two_and_inactive</item>
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <!-- gbutton_whitetton space for the shadow -->
        <item name="android:layout_margin">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="my_click_button">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
    </style>
    

    <!-- TRANSPARENT CONTAINER -->
    <style name="transparent_container">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:paddingTop">25dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:paddingBottom">25dp</item>
        <item name="android:paddingLeft">15dp</item>
        <!-- todo: maybe make background transparent? -->
        <item name="android:background">@color/background_two_and_inactive</item>

        <item name="android:divider">@drawable/divider_empty</item>
        <item name="android:showDividers">middle</item>
    </style>

    <!-- DIALOG -->
    <style name="my_no_border_dialog_theme" parent="@android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- Full screen dialog -->
    <style name="FullScreenDialogStyle">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsFloating">false</item>
    </style>


    <!-- Input Fields -->
    <style name="default_input">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">0dp</item>
    </style>

    <style name="default_input_error" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/highlight_main</item>
    </style>

    <style name="text_label_white" parent="TextAppearance.AppCompat">
        <item name="android:textColorHint">@color/background_main</item>
        <item name="android:textSize">18sp</item>
        <item name="colorControlNormal">@color/background_main</item>
        <item name="android:textColorHighlight">@color/highlight_main</item>
        <item name="android:textColorLink">@color/highlight_main</item>
    </style>

    <!-- Spinner -->
    <style name="default_spinner" parent="@android:style/Widget.Holo.Light.Spinner">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <style name="text_label_black" parent="TextAppearance.AppCompat">
        <item name="android:textColorHint">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="colorControlNormal">@color/black</item>
        <item name="android:textColorHighlight">@color/highlight_main</item>
        <item name="android:textColorLink">@color/highlight_main</item>
    </style>

</resources>
