<resources>

    <!-- APPLICATION THEME -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/materialGreen</item>
        <item name="colorPrimaryDark">@color/myPrimaryDark</item>
        <item name="colorAccent">@color/materialGreen</item>
    </style>


    <!-- TEXT STYLES -->
    <style name="h1">
        <item name="android:textSize">23dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="h2">
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="h3">
        <item name="android:textSize">16dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">3dp</item>
    </style>


    <!-- BUTTON -->
    <style name="my_round_button">
        <item name="android:layout_width">55dp</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="my_round_button_default">
        <item name="android:layout_width">55dp</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:background">#38d1b0</item>
    </style>

    <style name="my_click_button">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
    </style>
        <!-- FLOATINGACTIONBUTTON -->
        <style name="my_floatingactionbutton">
            <item name="android:layout_width">56dp</item>
            <item name="android:layout_height">56dp</item>
            <item name="android:scaleType">fitXY</item>
        </style>

    <!-- TRANSPARENT CONTAINER -->
    <style name="transparent_container">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:paddingTop">25dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:paddingBottom">25dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:background">@color/myPrimaryBackgroundTransparent</item>

        <item name="android:divider">@drawable/empty_divider</item>
        <item name="android:showDividers">middle</item>
    </style>

    <!-- DIALOG -->
    <style name="my_no_border_dialog_theme" parent="@android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

</resources>
