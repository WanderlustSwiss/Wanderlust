<resources>

    <!-- APPLICATION THEME -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/materialGreen</item>
        <item name="colorPrimaryDark">@color/myPrimaryDark</item>
        <item name="colorAccent">@color/myYellow</item>
        <item name="windowActionBar">true</item>
        <!--<item name="windowNoTitle">true</item>-->
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />




    <!-- TEXT STYLES -->
    <style name="h1">
        <item name="android:textSize">23sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="h2">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="h3">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">3dp</item>
    </style>


    <!-- BUTTONS -->
    <style name="floatingactionbutton_normal" parent="Widget.Design.FloatingActionButton">
        <!-- properties -->
        <item name="android:elevation">5dp</item>
        <item name="backgroundTint">@color/materialGreen</item>
        <item name="android:layout_width">56dp</item>
        <item name="android:layout_height">56dp</item>
        <!-- give button space for the shadow -->
        <item name="android:layout_margin">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="floatingactionbutton_mini" parent="Widget.Design.FloatingActionButton">
        <!-- properties (material standard) -->
        <item name="android:elevation">5dp</item>
        <item name="backgroundTint">@color/materialGreen</item>
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <!-- give button space for the shadow -->
        <item name="android:layout_margin">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="my_click_button">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- TRANSPARENT CONTAINER -->
    <style name="transparent_container">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:paddingTop">25dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:paddingBottom">25dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:background">@color/myPrimaryBackgroundTransparent</item>

        <item name="android:divider">@drawable/empty_divider</item>
        <item name="android:showDividers">middle</item>
    </style>

    <!-- DIALOG -->
    <style name="my_no_border_dialog_theme" parent="@android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

</resources>
